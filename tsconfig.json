{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./src/types"], 
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
